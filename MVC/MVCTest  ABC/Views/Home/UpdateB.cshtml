@using MVCTest.Models
@model Books


@{
    ViewData["Title"] = "Create Page";
}







@using(Html.BeginForm("UpdateBook", "Home", Model))
{
    <legend>Update Book</legend>
    <div>
      @Html.TextBoxFor(model => model.Id, new { Style="display :none;" })
     
    </div>
    <br>
    <div>
       @Html.DisplayNameFor(model => model.Name)
       @Html.TextBoxFor(model => model.Name , new { @class = "form-control" })
    </div>
    <br>
    <div>
       @Html.DisplayNameFor(model => model.Author)
       @Html.DropDownListFor(model => model.Author,  (IEnumerable <SelectListItem>) ViewData["Authors"], "Selecciona Autor", new { @class = "" })

    </div>
    <br>
    <div>
       @Html.DisplayNameFor(model => model.Price)
       @Html.TextBoxFor(model => model.Price , new { @class = "form-control" })
    </div>
    
    
    
   <br>
   

    <input type="submit" name="SaveButton" value="Save" class="btn btn-primary" />
}