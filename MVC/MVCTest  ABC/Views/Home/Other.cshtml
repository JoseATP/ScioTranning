@using MVCTest.Models
@model IEnumerable<Author>

@{
    ViewData["Title"] = "Home Page";
}


<h1> Author</h1>

<table class="table table-striped">
    <tr>
      
        <th>Name</th>
        <th>Delete</th>
        <th>Update</th>
        
    </tr>
    
    @foreach(var item in Model)
    {
        <tr>  
            
             <td>@item.Name </td>
             <td>@Html.ActionLink("Delete", "DeleteAuthor", item, new {@class = "btn btn-danger" } )</td>
             <td>@Html.ActionLink("Update", "UpdateA", "Home", item, new {@class = "btn btn-warning" })</td>
        </tr>
    }
       
    
     
</table>

